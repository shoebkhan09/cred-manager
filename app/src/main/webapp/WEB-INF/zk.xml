<?xml version="1.0" encoding="UTF-8"?>
<!-- Read the ZK 8 Configuration Reference manual to learn about tags here -->
<zk>
    <preference>
        <name>org.zkoss.zk.ui.WebApp.name</name>
        <value>Credential manager</value>
    </preference>
    <library-property>
        <name>org.zkoss.zul.image.preload</name>
        <value>true</value>
    </library-property>

    <!-- session timeout redirect -->
    <session-config>
        <device-type>ajax</device-type>
        <timeout-uri>/index.zul</timeout-uri>
    </session-config>

    <!-- bootstrap settings -->
    <library-property>
        <name>org.zkoss.zul.Button.mold</name>
        <value>bs</value>
    </library-property>
    <library-property>
        <name>org.zkoss.zul.Menupopup.mold</name>
        <value>bs</value>
    </library-property>
    <!--library-property>
        <name>org.zkoss.zul.Panel.mold</name>
        <value>bs</value>
    </library-property-->

    <!-- locale, resource bundle and character encoding settings -->
    <library-property>
        <name>org.zkoss.web.preferred.locale</name>
        <value>en</value>
    </library-property>
    <library-property>
        <name>org.zkoss.util.label.web.charset</name>
        <value>ISO-8859-1</value>
    </library-property>
    <system-config>
        <label-location>/WEB-INF/classes/labels/admin.properties</label-location>
        <label-location>/WEB-INF/classes/labels/application.properties</label-location>
        <label-location>/WEB-INF/classes/labels/general.properties</label-location>
        <label-location>/WEB-INF/classes/labels/user.properties</label-location>
    </system-config>

    <!-- tooltip settings -->
    <client-config>
        <tooltip-delay>70</tooltip-delay>
    </client-config>

    <!-- important listeners -->
    <listener>
        <listener-class>org.gluu.credmanager.core.init.ZKInitializer</listener-class>
    </listener>
</zk>